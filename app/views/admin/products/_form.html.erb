  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
    <div class="form-group">
      <label class="form-label">ğŸ“ SKU</label>
      <%= f.text_field :sku, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <label class="form-label">ğŸ“¦ Nombre</label>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="form-label">ğŸ“ DescripciÃ³n</label>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>
  
  <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
    <div class="form-group">
      <label class="form-label">ğŸ’° Precio (S/)</label>
      <%= f.number_field :price, class: "form-control", step: "0.01", min: "0", required: true %>
