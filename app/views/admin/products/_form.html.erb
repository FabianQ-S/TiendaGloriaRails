      <label class="form-label">ğŸ·ï¸ CategorÃ­a</label>
      <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: "Seleccionar categorÃ­a" }, { class: "form-control", required: true } %>
    </div>
    
